    <decisions>
        <name>check_status_and_business_type</name>
        <label>check status and business type</label>
        <locationX>314</locationX>
        <locationY>311</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Deal_status_is_Approved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.SBQQ__Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approved</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>update_Record_type_to_Read_only</targetReference>
            </connector>
            <label>Deal status is Approved</label>
        </rules>
        <rules>
            <name>Deal_Business_type_is_ACR</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Business_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>ACR</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_record_type_to_ACR</targetReference>
            </connector>
            <label>Deal Business type is ACR</label>
        </rules>
    </decisions>
