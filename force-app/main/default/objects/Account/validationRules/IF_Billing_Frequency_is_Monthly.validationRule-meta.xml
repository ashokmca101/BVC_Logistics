<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>IF_Billing_Frequency_is_Monthly</fullName>
    <active>true</active>
    <description>Mandatory Billing cycle,  IF Billing Frequency is Monthly.</description>
    <errorConditionFormula>TEXT(Billing_Frequency__c)=&quot;Monthly&quot; &amp;&amp;  ISBLANK(TEXT(Billing_Cycle__c))</errorConditionFormula>
    <errorDisplayField>Billing_Cycle__c</errorDisplayField>
    <errorMessage>Kindly populate billing cycle.</errorMessage>
</ValidationRule>
