    <alerts>
        <fullName>Contract_Activation_Email_Alert_for_BVC_Team</fullName>
        <description>Contract Activation Email Alert for BVC Team</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <field>Quote_Creator_Email__c</field>
            <type>email</type>
        </recipients>
        <recipients>
            <recipient>Billing_Users</recipient>
            <type>group</type>
