    <fieldUpdates>
        <fullName>Quote_Creator_Email_Update</fullName>
        <field>Quote_Creator_Email__c</field>
        <formula>SBQQ__Quote__r.CreatedBy.Email</formula>
        <name>Quote Creator Email Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>ACR Contract Creation Email Alert for Collection Team</fullName>
        <actions>
            <name>ACR_Email_Alert_on_Contract_Creation_for_BVC_Collection_Team</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contract.Business_Type__c</field>
            <operation>equals</operation>
            <value>ACR</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Contract Activation Email Alert for Billing Team</fullName>
        <actions>
            <name>Contract_Activation_Email_Alert_for_BVC_Team</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Contract.Status</field>
            <operation>equals</operation>
            <value>Activated</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
